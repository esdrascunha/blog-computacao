<% if false %>
    <%= form_for @article do |f| %>
       <% if @article.errors.any? %>
         <div id="error_explanation">
         	<h2>
         	  <%= pluralize(@article.errors.count, "error")%> prohibition this
                article to be saved:
            </h2>
             <ul>
             	<% @article.errors.full_messages.each do |msg| %>
             	  <li><%= msg %></li>
         	    <% end %>
            </ul>
        </div>
        <%end%>

    <p>
        <%= f.label :author %><br>
        <%= f.text_field :author %>
    </p>


    <p>
    	<%= f.label :title %><br>
    	<%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
    </p>

    <p>
        <%= f.submit %>
    </p>
    </div>
    <%end%>
    <%= link_to 'Back', articles_path %>
<% end %>

<%= simple_form_for @article, :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
        <div class='form-group'>
            <div class='col-xs-3'>
                <%= f.input :author %><br>
            </div>
        </div>
        
        <div class='form-group'>
            <div class='col-xs-4'>
                <%= f.input :title %><br>
            </div>
        </div>

        <div class='form-group'>
            <div class='col-xs-5'>
                <%= f.input :text, input_html: {rows: "10"} %><br>
            </div>
        </div>
        
        <div class='form-actions'>
            <div class='col-xs-5'>
                <%= f.submit class: "btn btn-primary" %><br>
                <%= link_to 'Back', articles_path, class: "btn btn-default" %>
            </div>
        </div>
<%end%>